root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.lua]
indent_style = space
indent_width = 2
column_width = 120

[{*.go,go.mod,go.sum}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8
